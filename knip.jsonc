{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["build.config.ts", "src/module.ts", "src/runtime/**", "scripts/*"],
      "ignoreUnresolved": [
        // virtuals
        "#nuxt-i18n/*",
        "#internal/i18n*"
      ],
      "ignoreDependencies": [
        // pre-commit
        "lint-staged",
        // auto imports
        "@intlify/utils"
      ],
      "ignore": ["{specs,test}/{fixtures,mocks}/**"]
    },
    "docs": {
      "entry": ["{components,layouts,pages,plugins,server}/**", "{app,error}.vue", "*.ts"]
    },
    "playground": {
      "entry": ["{components,layouts,pages,plugins,server}/**", "{app,error}.vue", "*.ts"],
      "ignore": ["i18n/**"],
      "ignoreDependencies": ["@nuxtjs/i18n"]
    }
  }
}
