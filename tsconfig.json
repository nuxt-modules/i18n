{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*",
      ],
      "@/*": [
        "./*",
      ],
    },
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "@nuxt/types",
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/templates/options.js",
  ]
}
